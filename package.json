{
	"name": "pancake",
	"private": true,
	"packageManager": "pnpm@8.15.9",
	"scripts": {
		"lint": "pnpm exec changeset status",
		"test:watch": "pnpm exec vitest watch",
		"test:unit-test": "pnpm exec vitest run",
		"test:end-to-end": "node tests/tester.js",
		"test": "pnpm run test:end-to-end && pnpm run test:unit-test",
		"watch": "pnpm exec onchange packages/*/src/ -- pnpm run build",
		"purge": "pnpm exec rimraf packages/*/node_modules && pnpm exec rimraf packages/*/dist && pnpm exec rimraf packages/*/lib && pnpm exec rimraf node_modules",
		"build": "pnpm -r run build",
		"install:check": "node scripts/install-check.mjs",
		"changeset": "pnpm exec changeset",
		"release:dry-run": "node scripts/release/dry-run.mjs --dry-run",
		"release:publish": "pnpm exec changeset publish"
	},
	"engines": {
		"node": ">=22",
		"npm": ">=10"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@babel/core": "^7.3.4",
		"@babel/preset-env": "^7.3.4",
		"chalk": "^4.1.2",
    "@vitest/coverage-v8": "^4.0.8",
		"copy-dir": "^0.4.0",
		"del": "^4.0.0",
		"dirsum": "^0.1.1",
		"npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
		"replace-in-file": "^3.4.4",
		"rimraf": "^2.6.3",
    "vitest": "^4.0.8"
	},
	"pnpm": {
		"overrides": {
			"tmp": "0.2.5",
			"braces": "^3.0.3"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/truecms/pancake.git"
	},
	"homepage": "https://github.com/truecms/pancake",
	"bugs": {
		"url": "https://github.com/truecms/pancake/issues"
	},
	"author": {
		"name": "trueCMS maintainers"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "hi@dominik-wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		},
		{
			"name": "Simon Schwartz",
			"email": "simon.schwartz0@gmail.com",
			"url": "https://simonschwartz.github.io/"
		},
		{
			"name": "Adam Zerella",
			"email": "hello@adamzerella.com",
			"url": "https://adamzerella.com/"
		}
	],
	"license": "MIT",
	"workspaces": [
		"packages/*"
	]
}
