{
	"name": "@truecms/pancake-js",
	"version": "2.0.2",
	"description": "A Pancake plugin to minify js files.",
	"packageManager": "pnpm@8.15.9",
	"keywords": [
		"npm",
		"flat",
		"peerDependencies",
		"auds",
		"design guide",
		"design system",
		"cli",
		"pancake-plugin"
	],
	"engines": {
		"node": ">=22",
		"npm": ">=10"
	},
	"main": "./lib/pancake.js",
	"scripts": {
		"prepublish": "pnpm run build && pnpm run test",
		"build": "pnpm run build:js",
		"build:watch": "pnpm run build:js && pnpm exec jest --coverage",
		"build:js": "pnpm exec babel src --out-dir lib",
		"test": "pnpm -w run test:unit-test",
		"watch": "pnpm run build:watch && pnpm exec onchange 'src/*.js' '__tests__/*.js' -- pnpm run build:watch"
	},
	"jest": {
		"testEnvironment": "node",
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"src/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"files": [
		"lib/*"
	],
	"dependencies": {
		"@truecms/pancake": "~2.0.0",
		"esbuild": "^0.25.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/preset-env": "^7.3.4",
		"del": "^4.0.0",
		"dirsum": "^0.1.1",
    "jest-cli": "^30.2.0",
    "onchange": "^7.1.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/truecms/pancake.git"
	},
	"homepage": "https://github.com/truecms/pancake",
	"bugs": {
		"url": "https://github.com/truecms/pancake/issues"
	},
	"author": {
		"name": "trueCMS maintainers"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "hi@dominik-wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		},
		{
			"name": "Sukhraj Ghuman",
			"email": "sukhrajghuman@live.com",
			"url": "https://github.com/sukhrajghuman"
		},
		{
			"name": "Adam Zerella",
			"email": "hello@adamzerella.com",
			"url": "https://adamzerella.com/"
		}
	],
	"license": "MIT"
}
